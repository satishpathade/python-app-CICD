pipeline {
    agent any

    environment {
        SSH_CRED   = 'python-key'
        SERVER_IP = '13.232.219.13'
        REMOTE_USER = 'ubuntu'
        APP_DIR = '/home/ubuntu/pythonapp'
        APP_NAME = 'python-app'
    }

    stages {

        stage('Clone Repository') {
            steps {
                // Pull latest code from GitHub
            git url: 'https://github.com/satishpathade/python-app-CICD.git', branch: 'main'
            }
        }

        stage('Copy Files to Server') {
            steps {
                // Create app directory and copy project files to EC2
                sshagent(credentials: ["${SSH_CRED}"]) {
                    sh '''
                        ssh -o StrictHostKeyChecking=no ${REMOTE_USER}@${SERVER_IP} "mkdir -p ${APP_DIR}"
                        scp -r README.md app.py requirements.txt test ${REMOTE_USER}@${SERVER_IP}:${APP_DIR}/
                    '''
                }
            }
        }

        stage('Install Dependencies & Run App (PM2)') {
            steps {
                sshagent(credentials: ["${SSH_CRED}"]) {
                    sh '''
                        ssh -o StrictHostKeyChecking=no ${REMOTE_USER}@${SERVER_IP} '
                            sudo apt update
                            sudo apt install -y python3-venv python3-pip nodejs npm

                            sudo npm install -g pm2

                            cd ${APP_DIR}

                            if [ ! -d "venv" ]; then
                                python3 -m venv venv
                            fi

                            source venv/bin/activate
                            pip install --upgrade pip
                            pip install -r requirements.txt
                            pm2 restart ${APP_NAME} || \
                            pm2 start app.py --name ${APP_NAME} --interpreter ${APP_DIR}/venv/bin/python
                            pm2 save
                        '
                    '''
                }
            }
        }
    }
}
